generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Visitor {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  ip        String   @unique
  visits    Int      @default(1)
  country   String?
  region    String?
  city      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
